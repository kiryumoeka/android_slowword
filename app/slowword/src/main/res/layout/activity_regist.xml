<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regist_bg"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:gravity="center_vertical"
    tools:context=".RegistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reg_tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textSize="25dp"
            android:alpha="0.8"
            android:textColor="@color/cardview_light_background" />

        <EditText
            android:id="@+id/reg_et_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:ems="10"
            android:hint="请输入账号"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/cardview_light_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reg_tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:text="密码："
            android:textColor="@color/cardview_light_background"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/reg_et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reg_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:text="手机号："
            android:textColor="@color/cardview_light_background"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/reg_et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintVertical_bias="0.567" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/reg_et_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:ems="6"
            android:hint="请输入验证码"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/reg_tv_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@color/cardview_shadow_start_color"
            android:text="1234"
            android:textColor="@color/cardview_light_background"
            android:textSize="25dp" />

        <Button
            android:id="@+id/reg_bt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:text="提交" />


    </LinearLayout>

</LinearLayout>