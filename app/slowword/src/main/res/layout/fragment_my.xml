<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MyFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <com.example.slowword.view.CircleView
                   android:id="@+id/me_iv_icon"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="20dp"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/tx" />
            <TextView
                android:id="@+id/me_tv_username"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_toRightOf="@id/me_iv_icon"
                android:layout_marginLeft="35dp"
                android:text="Admin"/>
    </RelativeLayout>
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/me_accountlist"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fm_bt_search"
                        />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/me_accountlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:text="账单"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/me_yue"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fm_bt_jf"
                        />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/me_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:text="余额"
                        />
                </RelativeLayout>
                <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/me_vip"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/me_vip_icon"
                        />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/me_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:text="VIP"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/me_collect"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/me_collect_icon"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/me_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="收藏"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/me_setting"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/me_setting_icon"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/me_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="设置"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD" />


        </LinearLayout>
   </androidx.cardview.widget.CardView>

</LinearLayout>